<style>
  .table-hover tbody tr:hover {
    background-color: #f5f5dc;
  }
  .table {
    color: #3A5734;
    border-color: #3A5734;
  }
  .table-admin td:nth-child(1) {
  width: 15%;
  }
  .table-admin td:nth-child(2),
  .table-admin td:nth-child(3),
  .table-admin td:nth-child(4) {
    width: 25%;
  }
</style>


<div class="row">
  <div class="col">
    <table class="table table-hover table-inverse table-admin">
      <thead>
        <tr>
          <th></th>
          <th>レシピ名</th>
          <th>ユーザー</th>
          <th>アレンジ前メニュー</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @recipes.each do |recipe| %>
      <tbody>
        <tr>
          <td><span><%= link_to admin_recipe_path(recipe.id) do %><%= image_tag recipe.get_menu_image(80,80) %><% end %></span></td>
          <td><span><%= link_to admin_recipe_path(recipe.id), class:"link-highlight" do %><%= recipe.name %><% end %></span></td>
          <td><span><%= link_to admin_user_path, class:"link-highlight" do %><%= user.name %><% end %></span></td>
          <td><span><%= recipe.original_menu.name %></span></td>
          <td colspan="3"></td>
        </tr>
      </tbody>
      <% end %>
     </table>
  </div>
</div>

  <div class="outer">
    <div class="inner">
      <%= paginate recipes %>
    </div>
  </div>