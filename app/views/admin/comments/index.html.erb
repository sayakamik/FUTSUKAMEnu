<div class="container p-2">
  <div class= "row">
    <div class="col-md-10 offset-md-1 ">
          <h2 class="title"><b>コメント一覧</b></h2>
          <p>(全<%= @comments_count.count %>コメント)</p>
      <!--おしまい-->

      <!--レシピ一覧テンプレート-->
      <div class="row">
        <div class="col">
          <table class="table table-hover">
              <thead>
                <tr>
                  <th>投稿日時</th>
                  <th>コメントid</th>
                  <th>コメント詳細</th>
                  <th>コメントレシピ</th>
                  <th>投稿会員名</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <% @comments.each do |comment| %>
              <tbody>
                <tr>
                  <td><span><%= comment.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></span></td>
                  <td><span><%= comment.id %></span></td>
                  <td><span><%= link_to admin_recipe_path(comment.recipe.id) do %><%= comment.comment %><% end %></span></td>
                  <td><span><%= comment.recipe.name %></span></td>
                  <td><span><%= link_to admin_user_path(comment.user.id) do %><%= comment.user.name %><% end %></span></td>
                  <td colspan="3"></td>
                </tr>
              </tbody>
              <% end %>
          </table>
        </div>
      </div>

          <div class="outer">
            <div class="inner">
              <%= paginate @comments %>
            </div>
          </div>
      <!--おしまい-->
    </div>
  </div>
</div>