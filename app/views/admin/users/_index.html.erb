<!--レシピ一覧-->
  <div class="row">
    <div class="col">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>会員名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <% users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id), class:"link" do %><%= user.name %><% end %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted? %>
                <p class="text-danger font-weight-bold"><%= user.is_deleted_text %></p>
                <% else %>
                <p class="text-secondary font-weight-bold"><%= user.is_deleted_text %></p>
                <% end %>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="outer">
    <div class="inner">
      <%= paginate users %>
    </div>
  </div>
