<style>
  .table-hover tbody tr:hover {
    background-color: #f5f5dc; 
  }
</style>

<!--1日目メニュー検索機能-->
<div>
  <table class= "table table-hover" style="border-radius: 10px;">
    <thead>
      <tr>
        <th class="title">1日目メニュー検索(新着１０件）</th>
      </tr>
    </thead>

    <% original_menus.each do |original_menu| %>
    <tbody>
      <tr>
        <td>
          <!--クエリパラメータで1日目メニューidを指定-->
          <%= link_to recipes_path(original_menu_id: (original_menu.id)), class:"link" do %>
            <%= original_menu.name%>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <p><%= link_to "1日目メニュー一覧", original_menus_path, class: "btn btn-light custom-light" %></p>
</div>
<!--おしまい-->