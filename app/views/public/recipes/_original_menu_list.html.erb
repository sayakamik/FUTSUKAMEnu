<!--1日目メニュー検索機能-->
<div>
  <table class= "table table-hover">
    <thead>
      <tr>
        <th>1日目メニュー検索</th>
      </tr>
    </thead>

    <% original_menus.each do |original_menu| %>
    <tbody>
      <tr>
        <td>
          <!--クエリパラメータで1日目メニューidを指定-->
          <%= link_to recipes_path(original_menu_id: (original_menu.id)), class:"link" do %>
            <%= original_menu.name%>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <!--1日目メニューページネーション-->
  <p>ページネーションを入れる</p>
</div>
<!--おしまい-->