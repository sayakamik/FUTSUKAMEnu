<div class="direction-field form-group">
  <%= f.hidden_field :_destroy %>
  <div class="form-group">
      <%= f.text_area :direction, placeholder: "作り方手順（必須）", class: "form-control", rows: "2" %>
      <%= f.file_field :image, accept: 'image/*', size: 30 %>
      <div class="input-group-append">
        <button type="button" class="btn btn-light custom-light remove-direction">
          <i class="fas fa-trash-alt"></i>
        </button>
      </div>
  </div>
</div>


<script>
  $(document).ready(function(){
    // 削除ボタンがクリックされたときの処理
    $(document).on('click', '.remove-direction', function(){
      // クリックされた削除ボタンに最も近い.direction-fieldにある_destroyフィールドをtrueに設定
      $(this).closest('.direction-field').find("input[name$='[_destroy]']").val('true');
      // そして、そのフィールドを隠す（removeでは削除、hideでは要素を隠す）
      $(this).closest('.direction-field').hide();
    });
  });
</script>