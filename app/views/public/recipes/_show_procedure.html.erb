<section class="procedure">
  <% recipe.procedures.each do |procedure| %>
    <ul class="procedure__list">
      <li>
        <%= procedure.direction %>&emsp;
        <% if procedure.image.attached? %>
          <%= image_tag procedure.get_image(150, 100), class: "img-fluid rounded" %>
        <% end %>
      </li>
    </ul>
  <% end %>
</section>