  <div class="container">
    <div class="row mx-auto mb-3">
      <h2 class="title">ログイン</h2>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード"  %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-4">
          <%= f.submit "ログイン",class: "btn btn-light custom-light"  %>
        </div>
      <% end %>
    </div>
    <div class="row my-4">
      <h5 class="col mt-3 text-center">
        会員登録がまだの方は<%= link_to "こちら", new_user_registration_path, class: "btn btn-light custom-light"  %>から会員登録してください。
      </h5>
    </div>
</div>