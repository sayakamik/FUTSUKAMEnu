  <div class="container">
    <div class="row mx-auto mb-3">
      <h2 class="title">新規登録</h2>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "登録名" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-4">
          <%= f.submit "登録する",class: "btn btn-light custom-light" %>
        </div>
      <% end %>
    </div>
      <div class="row my-4">
        <h5 class="col mt-3 text-center">
          すでに登録済みの方は<%= link_to "こちら", new_user_session_path, class: "btn-success" %>からログインしてください。
        </h5>
      </div>
  </div>
